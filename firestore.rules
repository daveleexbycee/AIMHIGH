rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin.
    // This assumes you have a 'users' collection where you assign roles.
    function isAdmin() {
      // Check if the user is authenticated and if their document in the 'users' collection has role set to 'admin'
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Products: Publicly readable, but only admins can perform write operations (create, update, delete).
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
      
      // Reviews are a subcollection of products.
      match /reviews/{reviewId} {
        // Anyone can read reviews.
        allow read: if true;
        // Only authenticated users can create reviews.
        allow create: if request.auth != null;
        // Users can only update or delete their own reviews. Admins can delete any review.
        allow update: if request.auth != null && request.auth.uid == resource.data.userId;
        allow delete: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      }
    }

    // User-specific collections like carts, wishlists, and user profiles.
    // Only the authenticated user can access their own documents.
    match /users/{userId}/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Orders collection
    match /orders/{orderId} {
        // A user can create an order if they are logged in and the order's userId matches their own.
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // A user can read an order if they own it or if they are an admin.
        allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
        // By default, prevent updates and deletes on orders to maintain order integrity.
        allow update, delete: if false;
    }
  }
}